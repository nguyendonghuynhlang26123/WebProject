<form data-form>
  <div class="content">
    <h1>Change pass</h1>
    <div class="input-block">
      <label for="password" class="input-label">Current password</label>
      <input name="password" type="password" data-password required />
    </div>
    <div class="input-block">
      <label for="new-password" class="input-label">New password</label>
      <input type="password" name="new-password" data-new-password required />
    </div>
    <button type="submit">Send</button>
  </div>
</form>
