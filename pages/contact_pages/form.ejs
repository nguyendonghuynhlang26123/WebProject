<form action="">
  <div class="content">
    <h1><%= title %></h1>
    <p><%= description %></p>
    <div class="input-block">
      <label for="name" class="input-label">Your Name</label>
      <input name="name" type="text" />
    </div>
    <div class="input-block">
      <label for="email" class="input-label">Your email</label>
      <input type="email" name="email" />
    </div>
    <div class="input-block">
      <label for="title" class="input-label">
        <%= title=="Correcting a post" ? "Post URL" : "Title" %>
      </label>
      <input name="title" type="text" />
    </div>
    <div class="input-block">
      <label for="content" class="input-label">Description</label>
      <textarea
        name="content"
        cols="30"
        rows="10"
        placeholder="i.e: <%= hint %>"
      ></textarea>
    </div>
    <button type="submit">Send</button>
  </div>
</form>
