<!DOCTYPE html>
<html lang="en">

  <body>
    <!-- HEADER -->
    <%- include('minimizedHeader/minimizedHeader', {btn_label: 'Subscribe'}); %>

<body>
  <!-- HEADER -->
  <%- include('minimizedHeader/minimizedHeader'); %>

      <p class="date"><%= (new Date(post.post_date)).toUTCString() %></p>
      <h1 class="post-title"><%= post.post_title %></h1>
      <p class="post-description"><b><%= post.post_description %></b></p>
      <figure class="post-thumbnail">
        <img src="<%= post.post_thumbnail %>" alt="" />
        <figcaption><%= post.post_thumbnail_description %></figcaption>
      </figure>

      <div class="grid-wrapper">
        <div class="post-content">
          <%- post.post_content %>
          <p class="post-author"><%= post.post_author %></p>
        </div>

    <div class="grid-wrapper">
      <div class="post-content">
        <p><b><%= post.post_description %></b></p>
        <%- post.post_content %>
        <p class="post-author"><%= post.post_author.first_name + " " + post.post_author.last_name %></p>
      </div>

      <%- include('recommendation/recommendation');%>
    </div>
  </main>
  <!-- FOOTER -->
  <%- include('../footer/footer'); %>
</body>

</html>